@using FamilyExpenseTracker.MVC1.Models
@model FamilyMember

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddFamilyMember</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
        <table>
            <tr>
                <td><label>Name : </label></td>
